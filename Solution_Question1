from django.db import models

class Employee(files.File):
name = files.CharField(max_length=255)
text = files.DecimalField(max_digits=5, decimal_places=2)
pdf = files.CharField(max_length=255)
python= files.CharField(max_length=255)
document= files.CharField(max_length=255)
>>> employee = employee.objects.get(name="jack")
>>> employee.file
<CharFieldFile: employee/ paper.pdf>
>>> employee.file1.name
'jack/paper.pdf'
<CharFieldFile: employee/ numbers.docx>
>>> employee.file2.name
'jack/numbers.docx'
    
