>>> employee = employee.objects.get(name="Johnny")
>>> employee.file
<CharFieldFile: employee/ test.py>
>>> employee.file.name
'Johnny/test.py'

>>> from django.core.files import File
f4=open(’Johnny/employee.file.name’)
JohnnyFile=(f4)














>>> import os
>>> from django.conf import settings
>>> initial_path = employee.file.path
>>> employee.file.name = 'jack/paper.pdf'
>>> new_path = settings.MEDIA_ROOT + employee.jackFiles.name
>>> # Move the file on the filesystem
>>> os.rename(initial_path, new_path)
>>> employee.save()
>>> employee.jackFiles.path
'/media/jack/paper.pdf'
>>> employee.jackFiles.path == new_path
True

>>> import os
>>> from django.conf import settings
>>> initial_path = employee.file3.path
>>> employee.file3.name = 'Richard/letter.txt'
>>> employee.RichardFile.name = employee.file3.name 
>>> new_path = settings.MEDIA_ROOT + employee.RichardFile.name
>>> # Move the file on the filesystem
>>> os.rename(initial_path, new_path)
>>> employee.save()
>>> employee.RichardFile.path
'/media/Richard/letter.txt'
>>> employee.RichardFile.path == new_path
True
>>> import os
>>> from django.conf import settings
>>> initial_path = employee.file4.path
>>> employee.file4.name = 'Johnny/test.py'
>>> employee.JohnnyFile.name = employee.file4.name 
>>> new_path = settings.MEDIA_ROOT + employee.JohnnyFile.name
>>> # Move the file on the filesystem
>>> os.rename(initial_path, new_path)
>>> employee.save()
>>> employee.JohnnyFile.path
'/media/Johnny/test.py'
>>> employee.JohnnyFile.path == new_path
True


